    },
    {
      "nombre": "Áreas de superficies de cuerpos",
      "id": "areas-superficies",
      "grid_template_columns": "repeat(auto-fit, minmax(180px, 1fr))",
      "isCollapsed": true,
      "elementos": [
        {
          "type": "button",
          "latex": "A_L = 2\\pi rh",
          "display": "A_L = 2πrh",
          "title": "Área lateral del cilindro"
        },
        {
          "type": "button",
          "latex": "A_T = 2\\pi r(r + h)",
          "display": "A_T = 2πr(r+h)",
          "title": "Área total del cilindro"
        },
        {
          "type": "button",
          "latex": "A_L = \\pi rl",
          "display": "A_L = πrl",
          "title": "Área lateral del cono"
        },
        {
          "type": "button",
          "latex": "A_T = \\pi r(r + l)",
          "display": "A_T = πr(r+l)",
          "title": "Área total del cono"
        },
        {
          "type": "button",
          "latex": "A = 4\\pi r^2",
          "display": "A = 4πr²",
          "title": "Área de la esfera"
        },
        {
          "type": "button",
          "latex": "A_T = 6a^2",
          "display": "A_T = 6a²",
          "title": "Área total del cubo"
        }
      ]
    },
    {
      "nombre": "Trigonometría y Coordenadas",
      "id": "trigonometria",
      "grid_template_columns": "repeat(auto-fit, minmax(180px, 1fr))",
      "isCollapsed": false,
      "elementos": [
        {
          "type": "button",
          "latex": "c^2 = a^2 + b^2",
          "display": "",
          "title": "Teorema de Pitágoras"
        },
        {
          "type": "button",
          "latex": "\\frac{a}{\\sin A} = \\frac{b}{\\sin B}",
          "display": "",
          "title": "Ley de senos"
        },
        {
          "type": "button",
          "latex": "c^2 = a^2 + b^2 - 2ab\\cos C",
          "display": "",
          "title": "Ley de cosenos"
        },
        {
          "type": "button",
          "latex": "y - y_1 = m(x - x_1)",
          "display": "",
          "title": "Ecuación de la recta"
        },
        {
          "type": "button",
          "latex": "d = \\sqrt{(x_2 - x_1)^2 + (y_2 - y_1)^2}",
          "display": "",
          "title": "Distancia entre dos puntos"
        },
        {
          "type": "button",
          "latex": "M = \\left (\\tfrac{x_1+x_2}{2},\\tfrac{y_1+y_2}{2}\\right )",
          "display": "",
          "title": "Punto medio"
        },
        {
          "type": "button",
          "latex": "(x - h)^2 + (y - k)^2 = r^2",
          "display": "",
          "title": "Ecuación de la circunferencia"
        }
      ]
    }
  ]
}
      "isCollapsed": false,
      "elementos": [
        {
          "type": "button",
          "latex": "P = 4l",
          "display": "P = 4l",
          "title": "Perímetro del cuadrado"
        },
        {
          "type": "button",
          "latex": "P = 2(a + b)",
          "display": "P = 2(a + b)",
          "title": "Perímetro del rectángulo"
        },
        {
          "type": "button",
          "latex": "P = a + b + c",
          "display": "P = a + b + c",
          "title": "Perímetro del triángulo"
        },
        {
          "type": "button",
          "latex": "P = n \\cdot l",
          "display": "P = n · l",
          "title": "Perímetro del polígono regular"
        },
        {
          "type": "button",
          "latex": "P = 2\\pi r",
          "display": "P = 2πr",

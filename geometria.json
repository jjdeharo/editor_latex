        {
          "type": "button",
          "latex": "A = bh",
          "display": "A = b·h",
          "title": "Área del paralelogramo"
        },
        {
          "type": "button",
          "latex": "A = \\tfrac{D d}{2}",
          "display": "",
          "title": "Área del rombo"
        },
        {
          "type": "button",
          "latex": "A = \\pi ab",
          "display": "A = πab",
          "title": "Área de la elipse"
        },
        {
          "type": "button",
          "latex": "A = \\tfrac{1}{2}ab\\sin C",
          "display": "",
          "title": "Área de un triángulo (con trigonometría)"
        },
        {
          "type": "button",
          "latex": "A = \\tfrac{\\theta}{360^\\circ}\\pi r^2",
          "display": "",
          "title": "Área del sector circular"
        }
      ]
    },
    {
      "nombre": "Volúmenes de cuerpos",
      "id": "volumenes",
      "grid_template_columns": "repeat(auto-fit, minmax(180px, 1fr))",
      "isCollapsed": false,
      "elementos": [
        {
          "type": "button",
          "latex": "V = a^3",

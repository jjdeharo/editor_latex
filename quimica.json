{
  "categorias": [
    {
      "nombre": "Gases ideales",
      "id": "gases_ideales",
      "grid_template_columns": "repeat(auto-fit, minmax(180px, 1fr))",
      "isCollapsed": false,
      "elementos": [
        {
          "type": "button",
          "latex": "PV = n R T",
          "title": "Ecuación de estado de gas ideal"
        },
        {
          "type": "button",
          "latex": "d = \\frac{PM}{RT}",
          "title": "Densidad de un gas ideal"
        },
        {
          "type": "button",
          "latex": "p_i = x_i P",
          "title": "Presión parcial"
        }
      ]
    },
    {
      "nombre": "Estequiometría",
      "id": "estequiometria",
      "grid_template_columns": "repeat(auto-fit, minmax(180px, 1fr))",
      "isCollapsed": false,
      "elementos": [
        {
          "type": "button",
          "latex": "n = \\frac{m}{M}",
          "title": "Cantidad de sustancia"
        },
        {
          "type": "button",
          "latex": "m = n M",
          "title": "Masa de sustancia"
        },
        {
          "type": "button",
          "latex": "C = \\frac{n}{V}",
          "title": "Concentración molar"
        },
        {
          "type": "button",
          "latex": "C_1 V_1 = C_2 V_2",
          "title": "Dilución"
        }
      ]
    },
    {
      "nombre": "Equilibrio químico",
      "id": "equilibrio_quimico",
      "grid_template_columns": "repeat(auto-fit, minmax(180px, 1fr))",
      "isCollapsed": false,
      "elementos": [
        {
          "type": "button",
          "latex": "K_c = \\frac{[C]^c [D]^d}{[A]^a [B]^b}",
          "title": "Constante de equilibrio (Kc)"
        },
        {
          "type": "button",
          "latex": "K_p = K_c (RT)^{\\Delta n}",
          "title": "Constante de equilibrio (Kp)"
        },
        {
          "type": "button",
          "latex": "Q = \\frac{[C]^c [D]^d}{[A]^a [B]^b}",
          "title": "Cociente de reacción"
        }
      ]
    },
    {
      "nombre": "Ácido-base",
      "id": "acido_base",
      "grid_template_columns": "repeat(auto-fit, minmax(180px, 1fr))",
      "isCollapsed": false,
      "elementos": [
        {
          "type": "button",
          "latex": "pH = -\\log_{10}[H^+]",
          "title": "pH"
        },
        {
          "type": "button",
          "latex": "pOH = -\\log_{10}[OH^-]",
          "title": "pOH"
        },
        {
          "type": "button",
          "latex": "pH + pOH = 14",
          "title": "Relación pH-pOH"
        },
        {
          "type": "button",
          "latex": "K_a = \\frac{[H^+][A^-]}{[HA]}",
          "title": "Constante de acidez"
        },
        {
          "type": "button",
          "latex": "pK_a = -\\log_{10}K_a",
          "title": "pKa"
        },
        {
          "type": "button",
          "latex": "pH = pK_a + \\log_{10}\\frac{[A^-]}{[HA]}",
          "title": "Henderson–Hasselbalch"
        }
      ]
    },
    {
      "nombre": "Termoquímica",
      "id": "termoquimica",
      "grid_template_columns": "repeat(auto-fit, minmax(180px, 1fr))",
      "isCollapsed": false,
      "elementos": [
        {
          "type": "button",
          "latex": "Q = m c \\Delta T",
          "title": "Calor sensible"
        },
        {
          "type": "button",
          "latex": "Q = n \\Delta H_{\\text{rxn}}",
          "title": "Calor de reacción"
        },
        {
          "type": "button",
          "latex": "\\Delta G = \\Delta H - T \\Delta S",
          "title": "Energía libre de Gibbs"
        }
      ]
    },
    {
      "nombre": "Constantes",
      "id": "constantes_quimicas",
      "grid_template_columns": "repeat(auto-fit, minmax(180px, 1fr))",
      "isCollapsed": false,
      "elementos": [
        {
          "type": "button",
          "latex": "N_A = 6.022\\times10^{23}\\,\\mathrm{mol}^{-1}",
          "title": "Número de Avogadro"
        },
        {
          "type": "button",
          "latex": "R = 8.314\\,\\mathrm{J mol^{-1}K^{-1}}",
          "title": "Constante de los gases"
        },
        {
          "type": "button",
          "latex": "k_B = 1.381\\times10^{-23}\\,\\mathrm{J/K}",
          "title": "Constante de Boltzmann"
        }
      ]
    }
  ]
}